package com.baitap;

public class baitap {
	public static void hinh1(int h) {
//		for(int i=0;i<h;i++) {
//			for (int j = i; j < h; j++) {
//				System.out.print("*");
//			}
//			System.out.println("1");
//		}
		
		/**
		 * ngoai dong, trong->cot
		 */
		for (int i = 0; i < h; i++) {
			for (int j = 0; j < h; j++) {
				if(i+j==h-1 ||
						j==h/2||
						(i==0&&j>=h/2)||
						(i==h-1 && j<=h/2)) {
					System.out.print("*");
				}else {
					System.out.println("*");
				}
			}
			System.out.println(" ");
		}
	}
	public static void main(String[] args) {
		hinh1(10);
	}
}

package communityutil.com;

import java.util.Scanner;

public class BaiTap {

	public static void main(String[] args) {
		
		do {
			Scanner sc = new Scanner(System.in);
			System.out.println("ban nhap so a");
			int a= sc.nextInt();
			System.out.println("ban nhap so b");
			int b=sc.nextInt();
			System.out.println("ban nhap ch");
			char ck = new Scanner(System.in).nextLine().charAt(0);	
			
			String line = new Scanner(System.in).nextLine();
			System.out.println("ban co muon tiep khong(c/k)");
			if(line.equals("k")) {
				break;
			}
			switch (ck) {
			case '+':
				System.out.println(a+b);
				break;
			
			case '-':
				System.out.println(a-b);
				break;
			
			case '*':
				System.out.println(a*b);
				break;

			default:
				System.out.println();
				break;
			}
		} while (true);
	}
}
